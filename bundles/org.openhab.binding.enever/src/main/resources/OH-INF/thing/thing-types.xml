<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="enever"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="enever">

		<label>EneVer Binding Thing</label>
		<description>EneVer Binding</description>

		<channels>
			<channel id="electricity-price" typeId="channel-price">
				<label>Hourly Electricity Price</label>
				<description>This channel provides the hourly electricity price</description>
			</channel>
			<channel id="electricity-price-plus-1" typeId="channel-price">
				<label>Hourly Electricity Price + 1</label>
				<description>This channel provides the hourly electricity price</description>
			</channel>
			<channel id="electricity-price-plus-2" typeId="channel-price">
				<label>Hourly Electricity Price + 2</label>
				<description>This channel provides the hourly electricity price</description>
			</channel>
			<channel id="average-electricity-price" typeId="channel-price">
				<label>Average Electricity Price</label>
				<description>This channel provides the average electricity price</description>
			</channel>
			<channel id="gas-price" typeId="channel-price">
				<label>Daily Gas Price</label>
				<description>This channel provides the daily gas price</description>
			</channel>
			<channel id="indication-hour" typeId="channel-indication">
				<label>Cheap/Expensive hours</label>
				<description>Indicates cheap, expensive and normal hours. neutral, cheap, expensive</description>
			</channel>
			<channel id="battery-control-mode" typeId="channel-indication">
				<label>Battery Control Mode</label>
				<description>Indicates proposed battery control mode</description>
			</channel>
			<channel id="battery-control-strategy" typeId="channel-strategy">
			</channel>
			<channel id="peak-hour" typeId="channel-peak">
				<label>Peak price Hour</label>
				<description>Hour with the highest price for the day</description>
			</channel>
		</channels>
		<properties>
			<property name="thingTypeVersion">1</property>
		</properties>

		<config-description>
			<parameter name="token" type="text" required="true">
				<label>Token</label>
				<description>Token</description>
			</parameter>
			<parameter name="numberOfHours" type="integer" required="true">
				<label>Number of hours</label>
				<description>Number of cheap/expensive hours</description>
			</parameter>
			<parameter name="priceTreshold" type="integer" required="false">
				<label>Treshold (%) for cheap/expensive hours</label>
				<description>Treshold in percentage of the average hour</description>
			</parameter>
			<parameter name="minMaxTreshold" type="integer" required="false">
				<label>Treshold (%) for min/max hours</label>
				<description>Treshold in percentage of the average hour</description>
			</parameter>
			<parameter name="warningTreshold" type="integer" required="false">
				<label>Treshold (%) for peak electricity</label>
				<description>Treshold in percentage for the peak electricity price</description>
			</parameter>
			<parameter name="excludeNightlyHours" type="boolean" required="false">
				<label>Exclude nightly hours</label>
				<description>Exclude nightly hour between 0:00 and 5:00</description>
			</parameter>
			<parameter name="debug" type="boolean" required="false">
				<label>Debug mode</label>
				<description>Debug mode</description>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="channel-price">
		<item-type>Number</item-type>
		<label>Price</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Price</description>
		<state pattern="%.2f" readOnly="true"></state>
	</channel-type>
	<channel-type id="channel-indication">
		<item-type>String</item-type>
		<label>Indication</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Cheap or expensive hour</description>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="channel-strategy">
		<item-type>String</item-type>
		<label>Battery Control Strategy</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Solar or price strategy</description>
		<command>
			<options>
				<option value="solar">Solar</option>
				<option value="price">Price</option>
			</options>
		</command>
	</channel-type>
	<channel-type id="channel-peak">
		<item-type>Number</item-type>
		<label>Peak hour</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Peak Hour</description>
		<state readOnly="true"></state>
	</channel-type>
</thing:thing-descriptions>
